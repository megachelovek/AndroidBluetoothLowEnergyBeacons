<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".EditBeaconActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="MAC адрес:" />

    <EditText
        android:id="@+id/beacon_mac"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#D3D3D3"
        android:backgroundTint="#D3D3D3"
        android:editable="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Имя датчика" />

    <EditText
        android:id="@+id/beacon_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Текущий RSSI" />

    <EditText
        android:id="@+id/current_rssi"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#D3D3D3"
        android:backgroundTint="#D3D3D3"
        android:editable="false" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Позиция X" />

    <EditText
        android:id="@+id/current_map_x"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Позиция Y" />

    <EditText
        android:id="@+id/current_map_y"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="308dp"
            android:layout_height="wrap_content"
            android:text="Сохранить" />

    </LinearLayout>

</LinearLayout>